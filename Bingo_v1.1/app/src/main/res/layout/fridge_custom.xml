                            android:padding="0px"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/box_radius_white"></Spinner>
                    </RelativeLayout>
                </LinearLayout>

                <!-- 여백 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
