<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.thanksbingo.bingo.Fragments.CustomerFragment">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="고객 센터 내 AlertDialog 만들기 test 중" />    <Button        android:id="@+id/editinfo"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="물건 정보 수정하기"/>    <Button        android:id="@+id/showinfo"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="물건 정보 보여주기"/>    <TextView        android:id="@+id/customer_item"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="품목"/>    <TextView        android:id="@+id/customer_count"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="갯수"/>    <TextView        android:id="@+id/customer_addday"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="등록일자"/>    <TextView        android:id="@+id/customer_expiration"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="유통기한"/></LinearLayout>